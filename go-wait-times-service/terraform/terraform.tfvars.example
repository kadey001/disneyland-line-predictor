# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your actual values

# GCP Project Configuration
project_id     = "theme-park-wait-times-app"
project_number = "602235714983"
region         = "us-central1"

# Function Configuration
function_name = "wait-times-collector"
environment   = "dev"

# Schedule Configuration (cron format)
# Examples:
# "*/1 * * * *"     = Every minute
# "0 * * * *"       = Every hour
# "0 */2 * * *"     = Every 2 hours
# "0 0 * * *"       = Every day at midnight
schedule_cron = "*/1 * * * *"

# Database Configuration
# Update this with your actual PostgreSQL connection string
database_connection_string = "postgres://username:password@host:port/database?sslmode=require"
